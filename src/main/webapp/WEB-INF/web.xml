<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>MVCFilmSite</display-name>
	<welcome-file-list>
		<welcome-file>home.do</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Film</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Film</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/BadRequest.jsp</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/BadRequest.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/BadRequest.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.*</exception-type>
		<location>/BadRequest.jsp</location>
	</error-page>
	<error-page>
		<exception-type>sql.*</exception-type>
		<location>/BadRequest.jsp</location>
	</error-page>
	<error-page>
		<exception-type>spring.*</exception-type>
		<location>/BadRequest.jsp</location>
	</error-page>












</web-app>